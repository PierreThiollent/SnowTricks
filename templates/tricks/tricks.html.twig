{% for trick in tricks %}
    <div class="max-w-md rounded overflow-hidden shadow-lg mb-8 trick-item mr-5">
        <img class="w-full max-h-60 object-cover object-center" src="images/{{ trick.images[0] }}"
             alt="{{ trick.name }} photo">
        <div class="p-6">
            <div class="font-bold text-xl mb-2">{{ trick.name }}</div>
            <p class="text-gray-700 text-base">
                {{ trick.description }}
            </p>
        </div>
        <div class="px-6 pt-4 pb-2 flex justify-between items-end">
            <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">
                {{ trick.category.name }}
            </span>

            {% if (is_granted('IS_AUTHENTICATED_FULLY') and trick.user.id == app.user.id) or (is_granted('ROLE_ADMIN')) %}
                <div>
                    <a class="mr-2 inline-block" href="">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                             stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                        </svg>
                    </a>
                    <button class="inline-block" type="button">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                             stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                        </svg>
                    </button>
                </div>
            {% endif %}
        </div>
    </div>
{% endfor %}